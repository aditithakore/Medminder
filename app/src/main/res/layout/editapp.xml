            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor Name:"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        />
                    <EditText
                        android:id="@+id/edit_doc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Doctor name" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor Contact:"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        android:textSize="18sp"
                        />
                    <EditText
                        android:id="@+id/edit_doc_con"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Doctor number"
                        android:inputType="phone"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set Time and Date"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/edit_appoinment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/deep_sapphire"
                            android:hint="10:00"
                            android:textSize="19sp"
                            android:drawableRight="@drawable/ic_baseline_alarm_add_24"
                            android:gravity="center"

                            />


                        <TextView
                            android:id="@+id/edit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Date"
                            android:textColor="@color/deep_sapphire"
                            android:drawableRight="@drawable/calender"
                            android:textSize="19sp"
                            android:gravity="center"
                            />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
