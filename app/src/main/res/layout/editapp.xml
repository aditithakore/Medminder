<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp"
                >

                <TextView
                    android:id="@+id/appid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="App id:"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/deep_sapphire"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor Name:"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        />
                    <EditText
                        android:id="@+id/edit_doc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Doctor name" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctor Contact:"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        android:textSize="18sp"
                        />
                    <EditText
                        android:id="@+id/edit_doc_con"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Doctor number"
                        android:inputType="phone"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set Time and Date"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="@color/deep_sapphire"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <EditText
                            android:id="@+id/edit_appoinment_time"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_baseline_alarm_add_24"
                            android:gravity="center"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textColor="@color/deep_sapphire"
                            android:textSize="19sp"

                            />


                        <EditText
                            android:id="@+id/edit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="yyyy-mm-dd"
                            android:inputType="date"
                            android:textColor="@color/deep_sapphire"
                            android:drawableRight="@drawable/calender"
                            android:textSize="19sp"
                            android:gravity="center"
                            />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp">

                <Button
                    android:id="@+id/updateapp"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/deep_sapphire"
                    android:text="Update"
                    android:textColor="@color/oyster_bay"
                    />

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

