<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oyster_bay"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        android:elevation="50dp"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">


            <ImageView
                android:id="@+id/imaeCal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="86dp"
                app:srcCompat="@drawable/calendar1" />

            <TextView
                android:id="@+id/rv_docname"
                android:layout_width="495dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="226dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="199dp"
                android:text="This is Doctors Name"
                android:textSize="40sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/rvapptime"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="235dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="396dp"
                android:text="This is Appointment Time"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/rvappdate"
                android:layout_width="327dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="237dp"
                android:layout_marginTop="194dp"
                android:layout_marginEnd="356dp"
                android:text="This is Appointment date"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/rv_doccon"
                android:layout_width="448dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="236dp"
                android:layout_marginTop="242dp"
                android:layout_marginEnd="237dp"
                android:text="This is Doctors Contact"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="58dp"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="57dp"
                app:srcCompat="@drawable/remove" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>





</RelativeLayout>